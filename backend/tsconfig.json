{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*.ts"],
      "@controllers/*": ["controllers/*.ts"],
      "@models/*": ["models/*.ts"],
      "@middleware/*": ["middleware/*.ts"],
      "@routes/*": ["routes/*.ts"],
      "@swaggers/*": ["swaggers/*.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
